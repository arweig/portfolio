---
import Title from "./global/titles/Title.astro";
---

<section id="contact">
  <div class="container">
    <Title text="Let's connect" />
    <p>Enter your name and email and I'll be in touch.</p>
    <form>
      <input type="text" name="name" placeholder="Joe" required />
      <input type="email" name="name" placeholder="joe@joe.com" required />
      <input type="submit" id="submit" value="Send"/>
    </form>
  </div>
</section>

<style>
  #contact {
    background-color: rgb(214, 214, 214);
  }
  
  #contact .container {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  form {
    display: flex;
    gap: 10px;
  }

  @media screen and (max-width: 600px) {
    form {
      flex-direction: column;
    }
  }
</style>